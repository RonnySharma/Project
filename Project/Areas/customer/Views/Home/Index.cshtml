@model IEnumerable<Project_Model.Product>
<div class="row">
    @using (Html.BeginForm())
    {
<h2>Title</h2>

        <input type="search" name="serchChanger" class="form-control" />
        
        <button type="submit"><i class="fa fa-search"></i>Search</button>
    }
    <br /> 
    <br /> 



    
   




    @foreach(var Product in Model)
    {
        <div>
           
    
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@Product.ImgeUrl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@Product.Title</b></p>
                            <p class="card-title text-primary">by <b>@Product.Author</b></p>
                        </div>
                         <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">$@Product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">$@Product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    
                    <div>
                        <a asp-action="Detail" class="btn btn-primary form-control" asp-route-id="@Product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
        </div>
    }
</div>







