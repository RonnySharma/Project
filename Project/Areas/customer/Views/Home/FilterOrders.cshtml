@model IEnumerable<Project_Model.Order>
@{
    ViewData["Title"] = "FilterOrders";
}

<h1>FilterOrders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>

            <th>orderTotal</th>
            <th>Date</th>
            <th>PhoneNumber</th>
            <th>state</th>
            <th>City</th>
            <th>pay</th>

        </tr>
    </thead>
    @foreach (var Item in Model)
    {
        <tbody>
            <tr>

                <td>@Item.Id</td>
                <td>@Item.Name</td>

                <td>@Item.orderTotal</td>
                <th>@Item.OrderData</th>
                <td>@Item.PhoneNumber</td>
                <td>@Item.state</td>
                <td>@Item.City</td>
                <td>@Item.OrderStatus</td>
                <td>
                    <a href="@Url.Action("Details", "Home", new { id = Item.Id })">Details</a>
                    <a href="@Url.Action("Cancel", "Home", new { id = Item.Id })">Cancel</a>
                    @*                        <form asp-controller="home" asp-action="Cancel"  method="post" >
                <input type="hidden" name="orderId" />
                <button type="submit">Cancel</button>*@
                    @*  </form>*@

                </td>

            </tr>
        </tbody>
    }



</table>
</div>