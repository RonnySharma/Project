@model Project_Model.VIewModel.CategoryVM
@{
    ViewData["Title"] = "Allorder";
}


<div class="row" id="result-container">



    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>

               

            </tr>
        </thead>
        @foreach (var Item in Model.CatagoriesList)
        {
            <tbody>
                <tr>

                    <td>@Item.Value</td>
                    <td>@Item.Text</td>

                   
               
                </tr>
            </tbody>
        }
       



    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"  href="/Adimen/cata/Index1?term=@Model.Term&oorderby=@Model.Orderby&currentPage=1">Privas</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="/Adimen/cata/Index1?term=@Model.Term&oorderby=@Model.Orderby&currentPage=@i">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" href="/Adimen/cata/Index1?term=@Model.Term&oorderby=@Model.Orderby&currentPage=@(Model.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

